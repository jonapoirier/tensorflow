<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10sp">

    <TextView
        android:id="@+id/textViewItemsFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textCardQuestionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="25sp"
        android:paddingBottom="10sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardQuestionView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#DDDDDD"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textComputeQuestionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textSize="22sp"
                android:paddingRight="10sp"
                android:paddingLeft="10sp"
                android:text="Quel est le matériau principal de l'article ?"/>

            <!-- Thin line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>

        <LinearLayout
            android:id="@+id/cardQuestionLinearLayoutH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            </LinearLayout>

            <!--RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/radio_pirates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="métal"/>
                <RadioButton android:id="@+id/radio_ninjas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plastique"/>
                <RadioButton android:id="@+id/radio_bois"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bois"/>
            </RadioGroup-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewItem"
                android:tag="image_tag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false" />


            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                >

                <!-- Title -->
                <TextView
                    android:id="@+id/textViewItemTitle"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

                <!-- Thin line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donutProgress"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2">

                        <!-- Characteristics -->

                        <!-- Couleur -->
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_pantone"
                                android:padding="4sp"/>

                            <TextView
                                android:id="@+id/textViewItemColor"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-thin"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                />

                        </LinearLayout>

                        <!-- Taille -->
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_meter"
                                android:padding="4sp"/>


                            <TextView
                                android:id="@+id/textViewItemHeight"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-thin"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                />

                        </LinearLayout>

                        <!-- Poids -->
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_weighing_scale"
                                android:padding="4sp"/>

                            <TextView
                                android:id="@+id/textViewItemWeight"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-thin"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                />


                        </LinearLayout>

                        <!-- Materiau -->
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_molecule"
                                android:padding="4sp"/>

                            <TextView
                                android:id="@+id/textViewItemMaterial"
                                android:textColor="#000000"
                                android:fontFamily="sans-serif-thin"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>